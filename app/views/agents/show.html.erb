<div class="bg-gray-50 min-h-screen py-12">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- En-tête du profil -->
    <div class="bg-white rounded-lg shadow-lg overflow-hidden">
      <div class="p-8">
        <div class="flex items-center">
          <!-- Avatar -->
          <div class="flex-shrink-0">
            <div class="h-32 w-32 rounded-full bg-indigo-600 flex items-center justify-center">
              <span class="text-4xl font-semibold text-white">
                <%= @agent.first_name[0] %><%= @agent.last_name[0] %>
              </span>
            </div>
          </div>

          <!-- Informations de l'agent -->
          <div class="ml-8">
            <h1 class="text-3xl font-bold text-gray-900">
              <%= @agent.first_name %> <%= @agent.last_name %>
            </h1>

            <!-- Badge du plan -->
            <div class="mt-2">
              <% case @agent.plan %>
              <% when 'premium' %>
                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-indigo-100 text-indigo-800">
                  <svg class="mr-1.5 h-2 w-2 text-indigo-400" fill="currentColor" viewBox="0 0 8 8">
                    <circle cx="4" cy="4" r="3" />
                  </svg>
                  Agent Premium
                  <svg class="ml-1 h-4 w-4 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                  </svg>
                </span>
              <% when 'standard' %>
                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
                  <svg class="mr-1.5 h-2 w-2 text-blue-400" fill="currentColor" viewBox="0 0 8 8">
                    <circle cx="4" cy="4" r="3" />
                  </svg>
                  Agent Standard
                  <svg class="ml-1 h-4 w-4 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                </span>
              <% else %>
                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-gray-100 text-gray-800">
                  <svg class="mr-1.5 h-2 w-2 text-gray-400" fill="currentColor" viewBox="0 0 8 8">
                    <circle cx="4" cy="4" r="3" />
                  </svg>
                  Agent Basic
                </span>
              <% end %>
            </div>

            <!-- Contact -->
            <div class="mt-4 flex space-x-4">
              <% if @agent.plan == 'basic' %>
                <a href="tel:<%= AdminContact.phone %>" class="inline-flex items-center text-indigo-600 hover:text-indigo-500">
                  <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                  </svg>
                  <%= AdminContact.phone %>
                </a>
                <a href="mailto:<%= AdminContact.email %>" class="inline-flex items-center text-indigo-600 hover:text-indigo-500">
                  <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
                  <%= AdminContact.email %>
                </a>
              <% else %>
                <a href="tel:<%= @agent.phone_number %>" class="inline-flex items-center text-indigo-600 hover:text-indigo-500">
                  <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                  </svg>
                  <%= @agent.phone_number %>
                </a>
                <a href="mailto:<%= @agent.email %>" class="inline-flex items-center text-indigo-600 hover:text-indigo-500">
                  <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
                  Contacter par email
                </a>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Liste des propriétés -->
    <div class="mt-12">
      <h2 class="text-2xl font-bold text-gray-900 mb-8">
        Propriétés de <%= @agent.first_name %> (<%= @properties.count %>)
      </h2>

      <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
        <% @properties.each do |property| %>
          <%= link_to property_path(property), class: "group" do %>
            <div class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300">
              <!-- Image -->
              <div class="relative h-64">
                <% if property.photos.attached? && property.photos.first.present? %>
                  <%= image_tag property.photos.first, class: "w-full h-full object-cover" %>
                <% else %>
                  <div class="w-full h-full bg-gray-200 flex items-center justify-center">
                    <span class="text-gray-400">Pas de photo</span>
                  </div>
                <% end %>
                <div class="absolute top-2 right-2">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-indigo-100 text-indigo-800">
                    <%= property.property_type.capitalize %>
                  </span>
                </div>
              </div>

              <!-- Informations -->
              <div class="p-6">
                <h3 class="text-lg font-semibold text-gray-900 group-hover:text-indigo-600">
                  <%= property.title %>
                </h3>
                <p class="mt-2 text-sm text-gray-500"><%= property.city %></p>
                <div class="mt-4">
                  <span class="text-lg font-bold text-indigo-600">
                    <%= number_to_currency(property.price, unit: "FCFA", precision: 0, delimiter: " ") %>
                  </span>
                  <% if property.transaction_type == 'rent' %>
                    <span class="text-sm text-gray-500">/mois</span>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div> 