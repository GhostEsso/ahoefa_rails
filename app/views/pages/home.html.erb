              </div>
            </div>

            <!-- Informations -->
            <div class="p-6">
              <h3 class="text-lg font-semibold text-gray-900 group-hover:text-indigo-600"><%= property.title %></h3>
              <p class="mt-2 text-sm text-gray-500"><%= property.city %></p>
              <div class="mt-4">
                <span class="text-lg font-bold text-indigo-600">
                  <%= number_to_currency(property.price, unit: "FCFA", precision: 0, delimiter: " ") %>
                </span>
                <% if property.transaction_type == 'rent' %>
                  <span class="text-sm text-gray-500">/mois</span>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>

      <!-- Propriété Standard -->
