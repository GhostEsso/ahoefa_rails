<!-- Hero Section -->
<div class="relative bg-white overflow-hidden">
  <div class="max-w-7xl mx-auto">
    <div class="relative z-10 pb-8 bg-white sm:pb-16 md:pb-20 lg:w-1/2 lg:pb-28 xl:pb-32">
      <main class="mt-10 mx-auto px-4 sm:mt-12 sm:px-6 md:mt-16 lg:mt-20 lg:px-8 xl:mt-28">
        <div class="lg:pl-12">
          <!-- Carousel -->
          <div id="hero-carousel" class="relative h-[300px] sm:h-[320px] md:h-[340px] max-w-xl">
            <!-- Slides -->
            <div class="hero-slide h-full">
              <div class="h-full flex flex-col justify-center">
                <h1 class="text-4xl tracking-tight font-extrabold text-gray-900 sm:text-5xl md:text-6xl">
                  <span class="block">Les meilleures</span>
                  <span class="block text-indigo-600">offres immobilières</span>
                </h1>
                <p class="mt-3 text-base text-gray-500 sm:mt-5 sm:text-lg sm:max-w-xl md:mt-5 md:text-xl">
                  Des prix compétitifs pour tous les budgets
                </p>
              </div>
            </div>

            <div class="hero-slide hidden h-full">
              <div class="h-full flex flex-col justify-center">
                <h1 class="text-4xl tracking-tight font-extrabold text-gray-900 sm:text-5xl md:text-6xl">
                  <span class="block">Trouvez votre</span>
                  <span class="block text-indigo-600">maison de rêve</span>
                </h1>
                <p class="mt-3 text-base text-gray-500 sm:mt-5 sm:text-lg sm:max-w-xl md:mt-5 md:text-xl">
                  Des milliers de propriétés vous attendent
                </p>
              </div>
            </div>

            <div class="hero-slide hidden h-full">
              <div class="h-full flex flex-col justify-center">
                <h1 class="text-4xl tracking-tight font-extrabold text-gray-900 sm:text-5xl md:text-6xl">
                  <span class="block">Service</span>
                  <span class="block text-indigo-600">professionnel</span>
                </h1>
                <p class="mt-3 text-base text-gray-500 sm:mt-5 sm:text-lg sm:max-w-xl md:mt-5 md:text-xl">
                  Des agents qualifiés à votre service
                </p>
              </div>
            </div>

            <!-- Navigation -->
            <div class="absolute -bottom-12 left-0 right-0 flex justify-start">
              <div class="flex space-x-3" id="slide-indicators">
                <button class="w-2.5 h-2.5 rounded-full bg-indigo-600 transition-colors duration-200" onclick="goToSlide(0)"></button>
                <button class="w-2.5 h-2.5 rounded-full bg-gray-300 transition-colors duration-200" onclick="goToSlide(1)"></button>
                <button class="w-2.5 h-2.5 rounded-full bg-gray-300 transition-colors duration-200" onclick="goToSlide(2)"></button>
              </div>
            </div>
          </div>
        </div>
      </main>
    </div>
  </div>
  <div class="lg:absolute lg:inset-y-0 lg:right-0 lg:w-1/2">
    <%= image_tag "https://images.unsplash.com/photo-1564013799919-ab600027ffc6?ixlib=rb-4.0.3",
        class: "h-56 w-full object-cover sm:h-72 md:h-96 lg:w-full lg:h-full",
        alt: "Maison moderne" %>
  </div>
</div>

<script>
let currentSlide = 0;
const slides = document.querySelectorAll('.hero-slide');
const indicators = document.querySelectorAll('#slide-indicators button');
const totalSlides = slides.length;
let slideInterval;

function showSlide(index) {
  // Masquer toutes les slides
  slides.forEach(slide => slide.classList.add('hidden'));
  // Afficher la slide actuelle
  slides[index].classList.remove('hidden');
  
  // Mettre à jour les indicateurs
  indicators.forEach(indicator => indicator.classList.replace('bg-indigo-600', 'bg-gray-300'));
  indicators[index].classList.replace('bg-gray-300', 'bg-indigo-600');

  // Ajouter une animation de fondu
  slides[index].style.opacity = '0';
  slides[index].style.transition = 'opacity 0.5s ease-in-out';
  requestAnimationFrame(() => {
    slides[index].style.opacity = '1';
  });
}

function nextSlide() {
  currentSlide = (currentSlide + 1) % totalSlides;
  showSlide(currentSlide);
}

function goToSlide(index) {
  currentSlide = index;
  showSlide(currentSlide);
  resetInterval();
}

function resetInterval() {
  clearInterval(slideInterval);
  startAutoSlide();
}

function startAutoSlide() {
  slideInterval = setInterval(nextSlide, 5000); // Change de slide toutes les 5 secondes
}

// Initialisation
document.addEventListener('DOMContentLoaded', function() {
  showSlide(0);
  startAutoSlide();
});

// Pause l'autoplay quand la souris est sur le carousel
document.getElementById('hero-carousel').addEventListener('mouseenter', () => {
  clearInterval(slideInterval);
});

// Reprend l'autoplay quand la souris quitte le carousel
document.getElementById('hero-carousel').addEventListener('mouseleave', () => {
  startAutoSlide();
});
</script>

<!-- Propriétés récentes -->
<div class="py-12 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center">
      <h2 class="text-3xl font-extrabold text-gray-900 sm:text-4xl">
        Découvrez nos dernières propriétés
      </h2>
      <p class="mt-4 text-lg text-gray-500">
        Les meilleures offres sélectionnées pour vous
      </p>
    </div>

