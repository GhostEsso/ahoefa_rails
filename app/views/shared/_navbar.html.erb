<nav class="bg-white shadow">
  <div class="w-full px-4 sm:px-20">
    <div class="flex justify-between h-20">
      <!-- Logo -->
      <div class="flex-shrink-0 flex items-center">
        <%= link_to root_path do %>
          <%= image_tag "logo-ahoefa.svg", class: "h-10 w-auto" %>
        <% end %>
      </div>

      <!-- Menu desktop -->
      <div class="hidden md:flex md:items-center md:space-x-8">
        <%= link_to "ACCUEIL", root_path, class: "text-gray-700 hover:text-indigo-600 px-3 py-2 text-sm font-medium" %>
        <%= link_to "PROPRIÉTÉS", properties_path, class: "text-gray-700 hover:text-indigo-600 px-3 py-2 text-sm font-medium" %>
        <%= link_to "AGENTS", agents_path, class: "text-gray-700 hover:text-indigo-600 px-3 py-2 text-sm font-medium" %>
        <%= link_to "CONTACT", "#", class: "text-gray-700 hover:text-indigo-600 px-3 py-2 text-sm font-medium" %>
        <%= link_to "À PROPOS", "#", class: "text-gray-700 hover:text-indigo-600 px-3 py-2 text-sm font-medium" %>
      </div>

      <!-- Bouton menu mobile -->
      <div class="md:hidden flex items-center">
        <button type="button" class="mobile-menu-button inline-flex items-center justify-center p-2 rounded-md text-gray-400 hover:text-gray-500 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-indigo-500" aria-expanded="false">
          <span class="sr-only">Ouvrir le menu principal</span>
          <svg class="block h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
          <svg class="hidden h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>

      <!-- Boutons de droite -->
      <div class="hidden md:flex items-center space-x-4">
        <% if user_signed_in? %>
          <details class="relative">
            <summary class="flex items-center text-gray-700 hover:text-gray-900 cursor-pointer list-none">
              <% if current_user.agent? && current_user.plan == "premium" %>
                <%= image_tag "certified.png", class: "h-4 w-4 mr-1" %>
              <% end %>
              <span class="mr-2"><%= current_user.full_name %></span>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
              </svg>
            </summary>

            <div class="absolute right-0 mt-2 w-48 bg-white rounded-md shadow-lg py-1 z-50 ring-1 ring-black ring-opacity-5">
              <%= link_to edit_profile_path, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" do %>
                <div class="flex items-center">
                  <svg class="mr-3 h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                  </svg>
                  Modifier mon profil
                </div>
              <% end %>

              <div class="border-t border-gray-100"></div>

              <%= button_to destroy_user_session_path, method: :delete,
                  class: "block w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" do %>
                <div class="flex items-center text-red-600">
                  <svg class="mr-3 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
                  </svg>
                  Se déconnecter
                </div>
              <% end %>
            </div>
          </details>
        <% else %>
          <div class="flex items-center space-x-4">
            <%= link_to "Devenir Agent", subscriptions_path, 
                class: "bg-green-100 text-green-800 hover:bg-green-200 px-4 py-2 rounded-md text-sm font-medium" %>
            <%= link_to "Se connecter", new_user_session_path, 
                class: "text-gray-700 hover:text-indigo-600 px-4 py-2 rounded-md text-sm font-medium" %>
            <%= link_to "S'inscrire", new_user_registration_path, 
                class: "bg-indigo-600 text-white hover:bg-indigo-700 px-4 py-2 rounded-md text-sm font-medium" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Menu mobile -->
  <div class="mobile-menu hidden md:hidden">
    <div class="px-2 pt-2 pb-3 space-y-1">
      <% if user_signed_in? %>
        <div class="flex items-center px-3 py-2">
          <% if current_user.agent? && current_user.plan == "premium" %>
            <%= image_tag "certified.png", class: "h-4 w-4 mr-1" %>
          <% end %>
          <span class="text-gray-900 font-medium"><%= current_user.full_name %></span>
        </div>
      <% end %>
      
      <%= link_to "ACCUEIL", root_path, class: "block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-gray-900 hover:bg-gray-50" %>
      <%= link_to "PROPRIÉTÉS", properties_path, class: "block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-gray-900 hover:bg-gray-50" %>
      <%= link_to "AGENTS", agents_path, class: "block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-gray-900 hover:bg-gray-50" %>
      <%= link_to "CONTACT", "#", class: "block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-gray-900 hover:bg-gray-50" %>
      <%= link_to "À PROPOS", "#", class: "block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-gray-900 hover:bg-gray-50" %>
      
      <div class="pt-4 pb-3 border-t border-gray-200">
        <% if user_signed_in? %>
          <%= link_to edit_profile_path, class: "block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-gray-900 hover:bg-gray-50" do %>
            <div class="flex items-center">
              <div class="mr-3">
                <svg class="h-6 w-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
              </div>
              Modifier mon profil
            </div>
          <% end %>
          <%= button_to destroy_user_session_path, method: :delete,
              class: "block w-full text-left px-3 py-2 rounded-md text-base font-medium text-red-600 hover:text-red-800 hover:bg-gray-50" do %>
            <div class="flex items-center">
              <div class="mr-3">
                <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
                </svg>
              </div>
              Se déconnecter
            </div>
          <% end %>
        <% else %>
          <div class="space-y-1">
            <%= link_to "Devenir Agent", subscriptions_path, 
                class: "block px-3 py-2 rounded-md text-base font-medium text-green-800 bg-green-100 hover:bg-green-200" %>
            <%= link_to "Se connecter", new_user_session_path, 
                class: "block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-gray-900 hover:bg-gray-50" %>
            <%= link_to "S'inscrire", new_user_registration_path, 
                class: "block px-3 py-2 rounded-md text-base font-medium text-white bg-indigo-600 hover:bg-indigo-700" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</nav>

<%= javascript_tag do %>
  document.addEventListener('turbo:load', function() {
    const button = document.querySelector('.mobile-menu-button')
    const menu = document.querySelector('.mobile-menu')
    const menuIcon = button.querySelector('svg:first-child')
    const closeIcon = button.querySelector('svg:last-child')

    button.addEventListener('click', () => {
      menu.classList.toggle('hidden')
      menuIcon.classList.toggle('hidden')
      closeIcon.classList.toggle('hidden')
    })
  })
<% end %>