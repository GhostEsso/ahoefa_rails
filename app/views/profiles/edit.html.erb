<div class="min-h-screen bg-gray-50 py-12">
  <div class="max-w-md mx-auto bg-white p-8 rounded-lg shadow">
    <h2 class="text-2xl font-bold text-gray-900 mb-6">Modifier mon profil</h2>

    <%= form_for current_user, url: update_profile_path, method: :patch do |f| %>
      <% if current_user.errors.any? %>
        <div class="bg-red-50 p-4 rounded-md mb-6">
          <div class="text-sm text-red-700">
            <% current_user.errors.full_messages.each do |message| %>
              <p><%= message %></p>
            <% end %>
          </div>
        </div>
      <% end %>

      <div class="space-y-6">
        <div>
          <%= f.label :first_name, "PrÃ©nom", class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :first_name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
        </div>

        <div>
          <%= f.label :last_name, "Nom", class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :last_name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
        </div>

        <div class="border-t border-gray-200 pt-6">
          <h3 class="text-lg font-medium text-gray-900 mb-4">Changer le mot de passe</h3>
          <p class="text-sm text-gray-500 mb-4">Laissez vide si vous ne souhaitez pas le modifier</p>

          <div class="space-y-4">
            <div>
              <%= f.label :password, "Nouveau mot de passe", class: "block text-sm font-medium text-gray-700" %>
              <%= f.password_field :password, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
            </div>

            <div>
              <%= f.label :password_confirmation, "Confirmer le nouveau mot de passe", class: "block text-sm font-medium text-gray-700" %>
              <%= f.password_field :password_confirmation, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
            </div>
          </div>
        </div>

        <div class="flex justify-end space-x-3">
          <%= link_to "Annuler", root_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
          <%= f.submit "Enregistrer les modifications", class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
        </div>
      </div>
    <% end %>
  </div>
</div> 