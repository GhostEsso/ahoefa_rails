<nav class="bg-white shadow">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between h-16">
      <!-- Logo -->
      <div class="flex-shrink-0 flex items-center">
        <%= link_to root_path do %>
          <%= image_tag "logo-ahoefa.svg", class: "h-8 w-auto" %>
        <% end %>
      </div>

      <!-- Menu desktop -->
      <div class="hidden md:flex md:items-center md:space-x-8">
        <%= link_to "Propriétés", properties_path, class: "text-gray-700 hover:text-indigo-600 px-3 py-2 text-sm font-medium" %>
        <%= link_to "Agents", agents_path, class: "text-gray-700 hover:text-indigo-600 px-3 py-2 text-sm font-medium" %>
        <%= link_to "À propos", "#", class: "text-gray-700 hover:text-indigo-600 px-3 py-2 text-sm font-medium" %>
        <%= link_to "Contact", "#", class: "text-gray-700 hover:text-indigo-600 px-3 py-2 text-sm font-medium" %>
      </div>

      <!-- Boutons de droite -->
      <div class="flex items-center space-x-4">
        <% if user_signed_in? %>
          <details class="relative">
            <summary class="flex items-center text-gray-700 hover:text-gray-900 cursor-pointer list-none">
              <span class="mr-2"><%= current_user.full_name %></span>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
              </svg>
            </summary>

            <div class="absolute right-0 mt-2 w-48 bg-white rounded-md shadow-lg py-1 z-50 ring-1 ring-black ring-opacity-5">
              <%= link_to edit_profile_path, 
                  class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" do %>
                <div class="flex items-center">
                  <svg class="mr-3 h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                  </svg>
                  Modifier mon profil
                </div>
              <% end %>
              
              <% if current_user.role == 'agent' %>
                <% if current_user.kyc_approved? %>
                  <%= link_to my_properties_path, 
                      class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" do %>
                    <div class="flex items-center">
                      <svg class="mr-3 h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                      </svg>
                      Mes annonces
                    </div>
                  <% end %>
                <% else %>
                  <%= link_to new_kyc_path, 
                      class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" do %>
                    <div class="flex items-center">
                      <svg class="mr-3 h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                      </svg>
                      <% if current_user.kyc_pending? %>
                        KYC en attente
                      <% elsif current_user.kyc_rejected? %>
                        Soumettre KYC à nouveau
                      <% else %>
                        Soumettre KYC
                      <% end %>
                    </div>
                  <% end %>
                <% end %>
              <% end %>
              
              <div class="border-t border-gray-100"></div>
              
              <%= button_to destroy_user_session_path, 
                  method: :delete,
                  class: "block w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" do %>
                <div class="flex items-center text-red-600">
                  <svg class="mr-3 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
                  </svg>
                  Se déconnecter
                </div>
              <% end %>
            </div>
          </details>
        <% else %>
          <%= link_to "Devenir agent", subscriptions_path, 
              class: "text-indigo-600 hover:text-indigo-800 px-3 py-2 rounded-md text-sm font-medium border border-indigo-600 hidden md:inline-block" %>
          <%= link_to "Agent?", subscriptions_path, 
              class: "text-indigo-600 hover:text-indigo-800 px-3 py-2 rounded-md text-sm font-medium border border-indigo-600 md:hidden" %>
          <%= link_to "Se connecter", new_user_session_path, 
              class: "text-gray-700 hover:text-indigo-600 px-3 py-2 rounded-md text-sm font-medium hidden md:inline-block" %>
          <%= link_to "Connexion", new_user_session_path, 
              class: "text-gray-700 hover:text-indigo-600 px-3 py-2 rounded-md text-sm font-medium md:hidden" %>
          <%= link_to "S'inscrire", new_user_registration_path, 
              class: "bg-indigo-600 text-white hover:bg-indigo-700 px-4 py-2 rounded-md text-sm font-medium" %>
        <% end %>

        <!-- Bouton menu mobile -->
        <% if user_signed_in? %>
          <div class="flex items-center md:hidden">
            <button type="button" 
                    onclick="toggleMobileMenu()"
                    class="inline-flex items-center justify-center p-2 rounded-md text-gray-700 hover:text-indigo-600 hover:bg-gray-100">
              <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
              </svg>
            </button>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Menu mobile -->
  <% if user_signed_in? %>
    <div id="mobile-menu" class="hidden md:hidden">
      <div class="px-2 pt-2 pb-3 space-y-1">
        <%= link_to "Propriétés", properties_path, 
            class: "block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-indigo-600 hover:bg-gray-100" %>
        <%= link_to "Agents", agents_path, 
            class: "block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-indigo-600 hover:bg-gray-100" %>
        <%= link_to "À propos", "#", 
            class: "block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-indigo-600 hover:bg-gray-100" %>
        <%= link_to "Contact", "#", 
            class: "block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-indigo-600 hover:bg-gray-100" %>
        
        <% if user_signed_in? %>
          <div class="border-t border-gray-200 mt-4 pt-4">
            <%= link_to edit_profile_path, 
                class: "block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-indigo-600 hover:bg-gray-100" do %>
              <div class="flex items-center">
                <svg class="mr-3 h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
                Modifier mon profil
              </div>
            <% end %>

            <% if current_user.role == 'agent' %>
              <% if current_user.kyc_approved? %>
                <%= link_to my_properties_path, 
                    class: "block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-indigo-600 hover:bg-gray-100" do %>
                  <div class="flex items-center">
                    <svg class="mr-3 h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                    </svg>
                    Mes annonces
                  </div>
                <% end %>
              <% else %>
                <%= link_to new_kyc_path, 
                    class: "block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-indigo-600 hover:bg-gray-100" do %>
                  <div class="flex items-center">
                    <svg class="mr-3 h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                    </svg>
                    <% if current_user.kyc_pending? %>
                      KYC en attente
                    <% elsif current_user.kyc_rejected? %>
                      Soumettre KYC à nouveau
                    <% else %>
                      Soumettre KYC
                    <% end %>
                  </div>
                <% end %>
              <% end %>

              <%= button_to destroy_user_session_path, 
                  method: :delete,
                  class: "block w-full text-left px-3 py-2 rounded-md text-base font-medium text-red-600 hover:text-red-700 hover:bg-gray-100" do %>
                <div class="flex items-center">
                  <svg class="mr-3 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
                  </svg>
                  Se déconnecter
                </div>
              <% end %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</nav>

<%= javascript_tag do %>
  function toggleMobileMenu() {
    const mobileMenu = document.getElementById('mobile-menu');
    mobileMenu.classList.toggle('hidden');
  }
<% end %> 